version: "3"
services:

  metabase-db:
    # Imagen
    image: postgres
    # Limitacion de recursos
    mem_limit: 1G
    mem_reservation: 1G
    cpus: 0.2
    restart: always
    container_name: metabase-db
    volumes:
      - ./db-data:${DB_DATA_DIR}
    networks:
      - metabase
    environment:
      - PGDATA=${DB_DATA_DIR}
      - POSTGRES_DB=${DB_NAME}
      - POSTGRES_USER=${DB_USER}
      - POSTGRES_PASSWORD=${DB_PASSWORD}

  # metabase-nginx:
  #   image: nginx:stable
  #   mem_limit: 300m
  #   mem_reservation: 100m
  #   restart: always
  #   container_name: metabase-nginx
  #   ports:
  #     - 80:80
  #     #- 443:443
  #   depends_on:
  #     - "metabase"
  #   networks:
  #     - metabase
  #   volumes:
  #     - "./nginx-service.conf:/etc/nginx/conf.d/default.conf"

  metabase:
    image: metabase/metabase:latest
    restart: always
    mem_limit: 1G
    mem_reservation: 1G
    cpus: 1
    container_name: metabase
    environment:
      MB_DB_TYPE: "postgres"
      MB_DB_DBNAME: "${DB_NAME}"
      MB_DB_PORT: "${DB_PORT}"
      MB_DB_USER: "${DB_USER}"
      MB_DB_PASS: "${DB_PASSWORD}"
      MB_DB_HOST: "metabase-db"
      MB_PASSWORD_COMPLEXITY: strong
      MB_PASSWORD_LENGTH: 8
      JAVA_TIMEZONE: "${MB_TIMEZONE}"
      JAVA_TOOL_OPTIONS: "-Xmx3072m"
    networks:
      - metabase
    ports:
      - "${MB_PORT}:3000"
    depends_on:
      - metabase-db

networks:
  metabase:
    driver: bridge

volumes:
  db-data: